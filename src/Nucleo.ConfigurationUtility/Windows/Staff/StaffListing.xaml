<Window x:Class="StaffTracking.StaffListing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:igDP="http://infragistics.com/DataPresenter"
    Title="StaffListing" Height="300" Width="300">
    <Grid>
		<igDP:XamDataPresenter Name="StaffList">
			<igDP:XamDataPresenter.FieldLayoutSettings>
				<igDP:FieldLayoutSettings AutoGenerateFields="False"/>
			</igDP:XamDataPresenter.FieldLayoutSettings>
			<igDP:FieldLayout>
				<igDP:FieldLayout.Fields>
					<igDP:Field Name="LastName" Label="Last Name"/>
					<igDP:Field Name="FirstName" Label="First Name" />
					<igDP:Field Name="HomePhoneNumber" Label="Home Phone" />
					<igDP:Field Name="CellPhoneNumber" Label="Cell Phone" />
					<igDP:Field Name="Email" Label="Email" />
				</igDP:FieldLayout.Fields>
			</igDP:FieldLayout>
		</igDP:XamDataPresenter>
	</Grid>
</Window>
